---
import { capitalize } from "../utils";

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag, index) =>
      index % 2 === 0 ? (
        <span class="px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90">
          <a href={`/articles/tag/${tag}`}>#{capitalize(tag)}</a>
        </span>
      ) : (
        <span class="px-2 py-1 bg-green-500 text-white rounded-full text-xs hover:opacity-90">
          <a href={`/articles/tag/${tag}`}>#{capitalize(tag)}</a>
        </span>
      )
    )
  }
</div>
